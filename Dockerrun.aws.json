{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "mjkrafael/multi-client",
            "hostname": "client",
            "essential": false 
        },
        {
            "name": "server",
            "image": "mjkrafael/multi-server",
            "hostname": "api",
            "essential": false 
        },
        {
            "name": "worker",
            "image": "mjkrafael/multi-worker",
            "hostname": "worker",
            "essential": false 
        },
        {
            "name": "nginx",
            "image": "mjkrafael/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ] ,
            "links": ["client","server"]
        }
    ]
}